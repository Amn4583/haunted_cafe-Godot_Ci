name: Export Godot (godot-ci)

on:
  push:
    branches: [ "main" ]
  workflow_dispatch:

jobs:
  export:
    runs-on: ubuntu-latest

    env:
      GODOT_VERSION: "4.4.1"    # For use inside commands
      EXPORT_NAME: "MyGame"

    container:
      image: barichello/godot-ci:4.4.1

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Godot export templates
        run: |
          mkdir -p ~/.local/share/godot/export_templates
          mv /root/.local/share/godot/export_templates/${GODOT_VERSION}.stable \
             ~/.local/share/godot/export_templates/${GODOT_VERSION}.stable

      - name: Export Web
        run: |
          mkdir -p build/web
          godot --headless --verbose --export-release "Web" build/web/index.html

      - name: Export Windows
        run: |
          mkdir -p build/windows
          godot --headless --verbose --export-release "Windows Desktop" "build/windows/${EXPORT_NAME}.exe"

      - name: Export Linux
        run: |
          mkdir -p build/linux
          godot --headless --verbose --export-release "Linux" "build/linux/${EXPORT_NAME}.x86_64"

      - name: Upload builds
        uses: actions/upload-artifact@v4
        with:
          name: ${{ env.EXPORT_NAME }}-builds
          path: build/
